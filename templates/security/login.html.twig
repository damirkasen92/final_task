{% extends './base.html.twig' %}

{% block title %} {{ 'login.login'|trans }} {% endblock %}

{% block body %}
    <div class="login-wrapper col-12 col-md-6 mx-auto">
        <h1 class="mb-3">{{ 'login.login'|trans }}</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <div class="mb-3">
                <label for="username" class="form-label">{{ 'login.email'|trans }}:</label>
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required/>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">{{ 'login.password'|trans }}:</label>
                <input type="password" id="password" class="form-control" name="_password" required/>
            </div>

            <button type="submit" class="btn btn-dark">{{ 'forms.submit'|trans }}</button>
        </form>
    </div>
{% endblock %}
