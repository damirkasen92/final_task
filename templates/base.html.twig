<!DOCTYPE html>
<html lang="{{ app.request.locale }}" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}Inventory webapp{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="bg-body-tertiary">

<header class="header mb-4">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="{{ path('home') }}">Inventories</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#headerNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="offcanvas offcanvas-end" id="headerNavbar">
                <div class="navbar-wrapper d-flex flex-column-reverse flex-lg-row justify-content-end p-4 p-lg-0">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.attributes.get('_route') == 'home' ? 'active' : '' }}"
                               aria-current="page"
                               href="{{ path('home') }}">{{ 'navbar.menu.home'|trans }}</a>
                        </li>

                        {% if is_granted(constant('App\\Enum\\UserRoles::ADMIN').value) %}
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.attributes.get('_route') == 'admin' ? 'active' : '' }}"
                                   aria-current="page"
                                   href="{{ path('admin') }}">{{ 'admin.title'|trans }}</a>
                            </li>
                        {% endif %}

                        {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.attributes.get('_route') == 'login' ? 'active' : '' }}"
                                   href="{{ path('login') }}">{{ 'navbar.menu.login'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.attributes.get('_route') == 'show_registration' ? 'active' : '' }}"
                                   href="{{ path('show_registration') }}">{{ 'navbar.menu.registration'|trans }}</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link"
                                   href="{{ path('logout') }}">{{ 'navbar.menu.logout'|trans }}</a>
                            </li>
                        {% endif %}
                    </ul>

                    <div class="d-flex mb-3 mb-lg-0">
                        <div class="dropdown me-2">
                            <button class="btn btn-dark dropdown-toggle h-100" type="button" data-bs-toggle="dropdown">
                                üåê {{ 'lang'|trans }}
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item"
                                       href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}">English</a>
                                </li>
                                <li><a class="dropdown-item"
                                       href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'ru'})) }}">–†—É—Å—Å–∫–∏–π</a>
                                </li>
                            </ul>
                        </div>

                        <button id="themeToggle" class="btn btn-dark"
                                data-controller="theme"
                                data-action="click->theme#change">
                            <i class="bi bi-sun-fill" id="themeIcon"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="container">

    {% block body %}{% endblock %}

</div>

</body>
</html>
